<!DOCTYPE html>
html(lang="en")
  include ../includes/head.pug
  include ../includes/script.pug   
  script(defer src=upPageLevel+'public/js/pages/user/registration.js')
  title Registrasi
  body
    include ../includes/header.pug
      br
    main
      h4.center.shadow REGISTRASI
      .container
        form(action="#",method="POST", onsubmit=" postUser();return false;")
          label(for='name')
            b Nama
          input(type='text' placeholder='Nama lengkap' name='name' id='inp_name' required)

          label(for='email')
            b Email
          input(type='email' placeholder='nama@domain.com' name='email' id='inp_email' required)

          label(for='password')
            b Password
          input(type='password' placeholder='masukkan password' name='password' id='inp_password' required)

          label(for='phone')
            b Telpon
          input(type='tel' placeholder='081234567890' name='phone' id='inp_phone' required)

          label(for='address')
            b Alamat
          input(type='text' placeholder='Masukkan alamat lengkap anda' name='address' id='inp_address' required)
          p
            label
              input(type="checkbox" required)
              span Saya setuju dengan semua peraturan yang telah ditentukan.
          div.center(style="margin:40px;")
              button(type="submit" class=`btn waves-light waves-effect ${colorTheme}` id="btnSubmit") Submit
    // Modal Structure
  include ../includes/loginmodal.pug
