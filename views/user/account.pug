    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Akun Saya
    link(rel="stylesheet", href="public/css/materialize.css")



  body
    nav.cyan(role="navigation")
      .nav-wrapper.container
        a#logo-container.brand-logo(href='/')=judul
        ul.right.hide-on-med-and-down
          li 
            a(href='/') Home
          li 
            a(href='#') Categories
          li 
            a(href='#') About

          li 
            a.waves-effect.waves-light.cyan.btn.modal-trigger#authStatus(href='#modal_login') Login

        

    h4.center Akun saya
    br
    ul.collection.container.z-depth-4
      li.collection-item
        p(style="float:left;width:10%;min-width: 50px")  Nama
        p#nama -
      li.collection-item
        p(style="float:left;width:10%;min-width: 50px")  Telepon
        p#telpon -
      li.collection-item
        p(style="float:left;width:10%;min-width: 50px")  E-Mail
        p#email -
